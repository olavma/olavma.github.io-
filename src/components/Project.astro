---
interface Props {
	title: string;
	logo: string;
	logoAlt: string;
	body: string;
	lang: string;
	href: string;
}

const { href, title, body, logo, lang, logoAlt } = Astro.props;
---

<article class="link-card">
	<a href={href}>
		<h2>{title}</h2>
		<div class="content">
			<figure>
				<img src={logo} alt={logoAlt}>
			</figure>
			<div class="text-content">
				<div>
					<h5 class="sinopsisTitle">Descripci√≥n/Sinopsis</h5>
					<p class="sinopsis">{body}</p>
				</div>
				<div class="language">
					<h4>Idiomas disponibles</h4>
					<h5><span>{lang}</span></h5>
				</div>
			</div>
		</div>
	</a>
</article>

<style>
	h2 {
		margin: 0;
		color: #ffc045;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-transform: uppercase;
	}
	h4 {
		color: #ffc045;
		font-family: 'Kanit', sans-serif;
		text-transform: uppercase;
	}
	.sinopsisTitle {
		font-weight: bolder;
	}
	h5 > span {
		color: red;
	}
	figure {
		margin: 1em 0;
		display: flex;
		align-items: center;
	}
	figure img {
		width: 100px; /* Set a small width for the image */
		height: auto; /* Maintain aspect ratio */
	}
	.link-card {
		list-style: none;
		display: block;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}
	.content {
		display: flex;
		align-items: flex-start;
	}
	.text-content {
		margin-left: 20px;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
